{
    "type": "module",
    "imports": {
        "#cmp/*": "./src/components/*",
        "#root/*": "./*"
    },
    "engines": {
        "node": ">=14"
    },
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview"
    },
    "devDependencies": {
        "@roxi/routify": "^3.0.0-next.141",
        "@sveltejs/vite-plugin-svelte": "^1.0.9",
        "axios": "^0.21.1",
        "mdsvex": "^0.10.6",
        "npm-run-all": "^4.1.5",
        "polykit": "^0.2.1-next.1",
        "spank": "^2.0.0-14",
        "svelte": "^3.52.0",
        "svelte-prism": "^1.1.6",
        "vite": "^3.1.8"
    },
    "routify": {
        "plugins": [
            "plugins/indexByName",
            "plugins/ownSourceMetaPlugin"
        ]
    },
    "prettier": {
        "singleQuote": true,
        "quoteProps": "as-needed",
        "trailingComma": "all",
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "semi": false,
        "useTabs": false,
        "tabWidth": 4,
        "printWidth": 90,
        "svelteSortOrder": "options-scripts-markup-styles",
        "svelteAllowShorthand": true,
        "svelteBracketNewLine": false,
        "svelteIndentScriptAndStyle": true
    }
}
